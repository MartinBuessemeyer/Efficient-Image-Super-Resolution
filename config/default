# this is where your enroot images (.sqsh files) are stored
default_value ENROOT_IMAGE_HOME "/enroot_share/${USER}"

# output enroot tag
default_value TARGET_TAG "my_project"

# output enroot .sqsh file (usually ${TARGET_TAG}.sqsh)
